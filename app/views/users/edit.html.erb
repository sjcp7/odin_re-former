<h1>Create User</h1>

<%= form_with model: @user do |form| %>
  <% if @user.errors.any? %>
    <h2><%= pluralize(@user.errors.count, 'error') %> found:</h2>
    <ul>
      <% @user.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  <% end %>

  <%= form.label :username %>
  <%= form.text_field :username %><br/>

  <%= form.label :email %>
  <%= form.text_field :email, placeholder: "example@example.com" %><br/>

  <%= form.label :password %>
  <%= form.password_field :password %><br/>

  <%= form.submit %>
<% end %>


